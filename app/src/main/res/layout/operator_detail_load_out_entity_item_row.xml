<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toosl="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOperatorDetailsBackgroundColor">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_load_out_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iv_load_out_image"
            toosl:text="example example example example example example example example"
            android:gravity="center"
            android:textColor="@color/colorDefaultText"
            style="@style/R6Companion.ContentHeader2Style" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_load_out_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_load_out_type"
            app:layout_constraintDimensionRatio="19:8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_load_out_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_load_out_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_load_out_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            toosl:text="example"
            android:textColor="@color/colorDefaultText"
            style="@style/R6Companion.ContentHeader2Style" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>