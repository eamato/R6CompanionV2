<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">

        <shape android:shape="oval">
            <solid android:color="@color/operator_speed_armor_colors" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape
            android:shape="ring"
            android:thicknessRatio="10"
            android:useLevel="false">

            <solid android:color="@color/operator_speed_armor_colors" />
            <size android:width="20dp" android:height="20dp" />
        </shape>

    </item>

</layer-list>
